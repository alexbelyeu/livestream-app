{
  "expo": {
    "name": "Livestream",
    "slug": "livestream",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "livestream",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0E0E10"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.livestream.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to broadcast live video",
        "NSMicrophoneUsageDescription": "This app needs microphone access to broadcast live audio",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0E0E10"
      },
      "package": "com.livestream.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "@fishjam-cloud/react-native-client",
        {
          "ios": {
            "cameraPermission": "This app needs camera access to broadcast live video",
            "microphonePermission": "This app needs microphone access to broadcast live audio"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
